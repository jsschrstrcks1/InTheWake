# Netlify Headers Configuration
# Long-term cache for versioned assets (1 year)
# Soli Deo Gloria

# Versioned assets (CSS, JS with ?v=X.X.X query strings)
# These have cache-busting version numbers, so can be cached forever
/assets/*.css
  Cache-Control: public, max-age=31536000, immutable
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

# Image assets with version query strings
/assets/*.webp
  Cache-Control: public, max-age=31536000, immutable
/assets/*.png
  Cache-Control: public, max-age=31536000, immutable
/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable
/assets/*.svg
  Cache-Control: public, max-age=31536000, immutable

# Author images (optimized, rarely change)
/authors/img/*
  Cache-Control: public, max-age=31536000, immutable

# Article thumbnails (optimized, rarely change)
/assets/articles/thumbs/*
  Cache-Control: public, max-age=31536000, immutable

# Data files (JSON with versioning via content updates)
/assets/data/*.json
  Cache-Control: public, max-age=86400, must-revalidate

# HTML pages - short cache with revalidation
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Root HTML
/
  Cache-Control: public, max-age=3600, must-revalidate

# Icons and favicons (rarely change)
/assets/icons/*
  Cache-Control: public, max-age=2592000
/favicon.ico
  Cache-Control: public, max-age=2592000
/manifest.webmanifest
  Cache-Control: public, max-age=2592000

# Security headers
/*
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: no-referrer-when-downgrade
