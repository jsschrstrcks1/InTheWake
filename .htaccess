# Apache Configuration - In the Wake
# Soli Deo Gloria

# ============================================================
# SECURITY: BLOCK ACCESS TO SENSITIVE FILES
# ============================================================

# Block access to Python scripts and compiled bytecode
<FilesMatch "\.(py|pyc|pyo)$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Block access to hidden files and directories (except .htaccess)
<FilesMatch "^\.(?!htaccess)">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Block access to backup and temp files
<FilesMatch "\.(bak|tmp|old|orig|swp|log)$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Block access to markdown files (documentation, not web content)
<FilesMatch "\.md$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Block access to CSV files (data exports, attributions)
<FilesMatch "\.csv$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Block access to shell scripts
<FilesMatch "\.sh$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# ============================================================
# REDIRECT RULES (CRITICAL FOR SEO)
# ============================================================

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # ============================================================
  # SECURITY: Block access to development directories
  # ============================================================

  # Block /scripts/ directory entirely (development tools only)
  RewriteRule ^scripts/ - [F,L]

  # Block admin Python/JS files but allow admin/reports/*.html
  RewriteCond %{REQUEST_URI} ^/admin/
  RewriteCond %{REQUEST_URI} !^/admin/reports/.*\.html$
  RewriteRule ^admin/ - [F,L]

  # ============================================================
  # HTTPS & CANONICAL REDIRECTS
  # ============================================================

  # Force HTTPS and non-www in a single redirect (avoid redirect chains)
  # Handles: http://*, http://www.*, https://www.* → https://cruisinginthewake.com/*
  RewriteCond %{HTTPS} off [OR]
  RewriteCond %{HTTP_HOST} ^www\.cruisinginthewake\.com$ [NC]
  RewriteRule ^(.*)$ https://cruisinginthewake.com/$1 [R=301,L]

  # Redirect legacy ship URL patterns
  # carnival-cruise-line → carnival (only phantom path that needs redirecting)
  RewriteRule ^ships/carnival-cruise-line/(.*)$ /ships/carnival/$1 [R=301,L]

  # Fix double-cruise-line naming (ships/carnival/carnival-carnival-*.html)
  RewriteRule ^ships/carnival/carnival-carnival-(.*)$ /ships/carnival/carnival-$1 [R=301,L]

  # Carnival ship naming: root ships/ → ships/carnival/ subdirectory
  RewriteRule ^ships/carnival-(mardi-gras|celebration|jubilee)\.html$ /ships/carnival/carnival-$1.html [R=301,L]

  # Carnival ship naming: missing "carnival-" prefix
  RewriteRule ^ships/carnival/(mardi-gras|celebration|jubilee)\.html$ /ships/carnival/carnival-$1.html [R=301,L]

  # Renamed files
  RewriteRule ^disability\.html$ /disability-at-sea.html [R=301,L]
  RewriteRule ^cruise-lines/rcl\.html$ /cruise-lines/royal-caribbean.html [R=301,L]
  RewriteRule ^solo/visitingtheunitedstates\.html$ /solo/visiting-the-united-states-before-your-cruise.html [R=301,L]
  RewriteRule ^drinks\.html$ /drink-packages.html [R=301,L]
  RewriteRule ^packing\.html$ /packing-lists.html [R=301,L]
  RewriteRule ^contact\.html$ /about-us.html [R=301,L]
  RewriteRule ^about\.html$ /about-us.html [R=301,L]

  # Phantom author/about paths
  RewriteRule ^authors/tina\.html$ /authors/tina-maulsby.html [R=301,L]
  RewriteRule ^about/ken-baker\.html$ /authors/ken-baker.html [R=301,L]

  # Phantom directories that don't exist
  RewriteRule ^contact/?$ /about-us.html [R=301,L]
  RewriteRule ^stories/?$ /articles.html [R=301,L]
  RewriteRule ^stories/.*$ /articles.html [R=301,L]
  RewriteRule ^news/?$ /index.html [R=301,L]
  RewriteRule ^newsletter/?$ /index.html [R=301,L]

  # Ship at root level (should be in /ships/rcl/)
  RewriteRule ^ships/enchantment-of-the-seas\.html$ /ships/rcl/enchantment-of-the-seas.html [R=301,L]

  # Ship directory index redirects (carnival-cruise-line/index.html is phantom)
  RewriteRule ^ships/carnival-cruise-line/index\.html$ /ships/carnival/ [R=301,L]

  # Legacy restaurant URLs with encoding issues (em-dash → hyphen)
  RewriteRule ^restaurants/main-dining-room[—–-]+radiance.*\.html$ /restaurants/main-dining-room.html [R=301,L,NC]
  RewriteRule ^restaurants/chops-grille[—–-]+radiance.*\.html$ /restaurants/chops.html [R=301,L,NC]

  # Phantom chops-grille ship-specific pages (only chops.html exists)
  RewriteRule ^restaurants/chops-grille-(adventure|enchantment|grandeur|radiance|rhapsody|vision|brilliance|serenade|jewel|mariner|navigator|voyager|explorer|freedom|liberty|independence|anthem|quantum|ovation|spectrum|odyssey|wonder|icon|star|utopia)\.html$ /restaurants/chops.html [R=301,L,NC]
  RewriteRule ^restaurants/chops-grille\.html$ /restaurants/chops.html [R=301,L]

  # Block nonsensical URLs and template variable patterns
  RewriteRule ^showmenu:.*$ /index.html [R=301,L]
  RewriteRule ^ships/rcl/\$\{slug\}\.html$ /ships/rcl/ [R=301,L]
  RewriteRule ^solo/\$1\.html$ /solo.html [R=301,L]
  RewriteRule ^\$\{url\}$ /index.html [R=301,L]

  # ============================================================
  # CARNIVAL HISTORIC SHIP REDIRECTS (Google 404 fixes)
  # ============================================================

  # Historic ships without year suffix - redirect to dated versions
  RewriteRule ^ships/carnival/festivale\.html$ /ships/carnival/festivale-1961.html [R=301,L]
  RewriteRule ^ships/carnival/celebration\.html$ /ships/carnival/celebration-1987.html [R=301,L]
  RewriteRule ^ships/carnival/holiday\.html$ /ships/carnival/holiday-1985.html [R=301,L]
  RewriteRule ^ships/carnival/tropicale\.html$ /ships/carnival/tropicale-1981.html [R=301,L]
  RewriteRule ^ships/carnival/carnivale\.html$ /ships/carnival/carnivale-1956.html [R=301,L]
  RewriteRule ^ships/carnival/jubilee\.html$ /ships/carnival/carnival-jubilee.html [R=301,L]

  # ============================================================
  # STUB AND PHANTOM PAGE REDIRECTS
  # ============================================================

  # Stub pages
  RewriteRule ^restaurants_index_stub\.html$ /restaurants.html [R=301,L]

  # Ship directory phantom paths
  RewriteRule ^ships/ships\.html$ /ships.html [R=301,L]
  RewriteRule ^ships/celebrity-cruises/index\.html$ /ships/celebrity-cruises/ [R=301,L]
  RewriteRule ^ships/holland-america-line/index\.html$ /ships/holland-america-line/ [R=301,L]

  # Directory to main page redirects
  RewriteRule ^cruise-lines/?$ /cruise-lines.html [R=301,L]
  RewriteRule ^videos/?$ /ships.html [R=301,L]
  RewriteRule ^solo/?$ /solo.html [R=301,L]

  # Ports directory to main page
  RewriteRule ^ports/?$ /ports.html [R=301,L]

  # ============================================================
  # ASSET FILE BLOCKS (return 410 Gone for Google to de-index)
  # ============================================================

  # Block JSON files in various directories (these should not be indexed)
  RewriteRule ^ships/rcl/assets/.*\.json$ - [G,L]
  RewriteRule ^videos/.*\.json$ - [G,L]
  RewriteRule ^travel/articles/.*\.json$ - [G,L]
</IfModule>

# ============================================================
# CACHE HEADERS
# ============================================================

<IfModule mod_headers.c>
  # Versioned CSS and JS files - cache for 1 year
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Image files - cache for 1 year
  <FilesMatch "\.(webp|png|jpg|jpeg|svg|ico)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # JSON data files - cache for 1 day with revalidation
  <FilesMatch "\.json$">
    Header set Cache-Control "public, max-age=86400, must-revalidate"
  </FilesMatch>

  # HTML files - cache for 1 hour with revalidation
  <FilesMatch "\.html$">
    Header set Cache-Control "public, max-age=3600, must-revalidate"
  </FilesMatch>

  # Manifest files - cache for 30 days
  <FilesMatch "\.(webmanifest|manifest)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>

  # Security headers
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "no-referrer-when-downgrade"
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On

  # Default expiration: 1 year
  ExpiresDefault "access plus 1 year"

  # CSS and JS
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"

  # Images
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # JSON data
  ExpiresByType application/json "access plus 1 day"

  # HTML
  ExpiresByType text/html "access plus 1 hour"

  # Manifest
  ExpiresByType application/manifest+json "access plus 30 days"
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>
