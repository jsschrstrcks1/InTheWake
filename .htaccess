# ============================================================
# REDIRECT RULES (CRITICAL FOR SEO)
# ============================================================

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Force HTTPS (redirect all HTTP traffic to HTTPS)
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

  # Remove www subdomain (canonicalize to non-www)
  RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

  # Redirect legacy ship URL patterns
  # carnival-cruise-line â†’ carnival (only phantom path that needs redirecting)
  RewriteRule ^ships/carnival-cruise-line/(.*)$ /ships/carnival/$1 [R=301,L]

  # Fix double-cruise-line naming (ships/carnival/carnival-carnival-*.html)
  RewriteRule ^ships/carnival/carnival-carnival-(.*)$ /ships/carnival/carnival-$1 [R=301,L]
</IfModule>

# ============================================================
# CACHE HEADERS
# ============================================================

<IfModule mod_headers.c>
  # Versioned CSS and JS files - cache for 1 year
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Image files - cache for 1 year
  <FilesMatch "\.(webp|png|jpg|jpeg|svg|ico)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # JSON data files - cache for 1 day with revalidation
  <FilesMatch "\.json$">
    Header set Cache-Control "public, max-age=86400, must-revalidate"
  </FilesMatch>

  # HTML files - cache for 1 hour with revalidation
  <FilesMatch "\.html$">
    Header set Cache-Control "public, max-age=3600, must-revalidate"
  </FilesMatch>

  # Manifest files - cache for 30 days
  <FilesMatch "\.(webmanifest|manifest)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>

  # Security headers
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "no-referrer-when-downgrade"
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On

  # Default expiration: 1 year
  ExpiresDefault "access plus 1 year"

  # CSS and JS
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"

  # Images
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # JSON data
  ExpiresByType application/json "access plus 1 day"

  # HTML
  ExpiresByType text/html "access plus 1 hour"

  # Manifest
  ExpiresByType application/manifest+json "access plus 30 days"
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>
